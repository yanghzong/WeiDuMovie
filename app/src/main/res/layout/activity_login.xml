<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_30"
    android:paddingTop="@dimen/dp_110">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/img_login_phone"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:src="@mipmap/log_icon_phone_default" />

            <EditText
                android:id="@+id/et_login_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_toRightOf="@id/img_login_phone"
                android:background="@null"
                android:hint="手机号"
                android:textColor="#fff"
                android:textColorHint="#c6c6c6"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#fff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/img_login_pwd"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:src="@mipmap/log_icon_lock_default" />

            <EditText
                android:id="@+id/et_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_toRightOf="@id/img_login_pwd"
                android:background="@null"
                android:hint="登录密码"
                android:inputType="textPassword"
                android:textColor="#fff"
                android:textColorHint="#c6c6c6"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/img_show_hide_pwd"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignRight="@id/et_login_pwd"
                android:layout_centerVertical="true"
                android:src="@mipmap/log_icon_eye_default" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#fff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <CheckBox
                android:id="@+id/cb_remember_the_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="记住密码"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14" />

            <CheckBox
                android:id="@+id/cb_automatic_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/cb_remember_the_pwd"
                android:text="自动登录"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/txt_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="快速注册"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_95"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_login"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            android:gravity="center"
            android:orientation="horizontal">
            <!--画左边的那条线-->
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1"
                android:background="#c6c6c6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:text="第三方账号快速登录"
                android:textColor="#c6c6c6"
                android:textSize="@dimen/sp_10" />
            <!--画右边的那条线-->
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1"
                android:background="#c6c6c6" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_login_weixin"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@mipmap/log_icon_weixin_default" />
    </LinearLayout>

</RelativeLayout>