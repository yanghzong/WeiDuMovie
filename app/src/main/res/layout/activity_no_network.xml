<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_open_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bg_personator"
        android:padding="@dimen/dp_15"
        android:text="打开网络设置"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/img_no_network"
        android:layout_width="@dimen/dp_205"
        android:layout_height="@dimen/dp_205"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_211"
        android:src="@mipmap/no_network" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_no_network"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:text="糟糕,网络不给力呀!"
        android:textColor="#8c8c8c"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal" />
</RelativeLayout>